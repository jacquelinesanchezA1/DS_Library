{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "LLDB Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/your_program_name",  // Path to your compiled program
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",  // Use LLDB for debugging
      "miDebuggerPath": "/usr/bin/lldb",  // Path to LLDB
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"  // Make sure you have a build task defined
    }
  ]
}
